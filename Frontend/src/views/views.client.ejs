<%- include("partials/partials.dash.header.ejs") %>

<section class="content">
    <h1><%= titulo %></h1>
    <h1>empleados</h1>
    <div class="container">
        <table border="5">
            <thead>
                <tr>
                    <th hidden >ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>process</th>
                    <th>rol</th>
                    <th>edad</th>
                    <th>departamento</th>
                    <th>sexo</th>
                    <th>file</th>
                    <th>Teléfono</th>
                    

                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(registroClient) { %>
                <tr id="client-<%= registroClient._id %>">
                    <td hidden><%= registroClient._id %></td>
                    <td><%= registroClient.nombre %></td>
                    <td><%= registroClient.email %></td>
                    <td><%= registroClient.process %></td>
                    <td><%= registroClient.rol %></td>
                    <td><%= registroClient.edad %></td>
                    <td><%= registroClient.dept %></td>
                    <td><%= registroClient.sexo %></td>
                    <td><%= registroClient.file %></td>
                    <td><%= registroClient.telefono %></td>



                    <td>
                        <button class="modificarRegristroClient" onclick="showEditClientForm('<%= registroClient._id %>')">Modificar</button>
                        <button class="eliminarRegristroClient" onclick="EliminaClientRegistro(event)">Eliminar</button>
                        
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Formulario para editar -->
   <!-- Formulario para editar -->
<!-- Formulario para editar -->
<div id="editClientForm" style="display:none;">
    <h2>Editar Cliente</h2>
    <form id="formEditClient" onsubmit="GuardarCambiosClient(event)">
        <input type="hidden" id="editClientId">
        <label for="editClientName">Nombre:</label>
        <input type="text" class="form-control" id="editClientName" placeholder="Ingrese el Nombre" required>
        <label for="editUserEmail">Correo:</label>
        <input type="email" class="form-control" id="editUserEmail" placeholder="Ingrese su Correo" required>
        <label for="editProcess">Proceso:</label>
        <input type="text" class="form-control" id="editProcess" placeholder="Ingrese el Proceso" required>
        <label for="editRol">Rol:</label>
        <input type="text" class="form-control" id="editRol" placeholder="Ingrese el Rol" required>
        <label for="editEdad">Edad:</label>
        <input type="text" class="form-control" id="editEdad" placeholder="Ingrese la Edad" required>
        <label for="editDept">Departamento:</label>
        <input type="text" class="form-control" id="editDept" placeholder="Ingrese el Departamento" required>
        <label for="editSexo">Sexo:</label>
        <input type="text" class="form-control" id="editSexo" placeholder="Ingrese el Sexo" required>
        <label for="editFile">Archivo:</label>
        <input type="text" class="form-control" id="editFile" placeholder="Ingrese el Archivo" required>
        <label for="editTelefono">Teléfono:</label>
        <input type="text" class="form-control" id="editTelefono" placeholder="Ingrese el Teléfono" required>
        <button type="submit" class="btn btn-app"><i class="fa fa-save"></i> Guardar Cambios</button>
        <button type="button" class="btn btn-app" onclick="closeEditClientForm()">Cancelar</button>
    </form>
</div>



</section>

<%- include("partials/partials.dash.footer.ejs") %>
